<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link href="https://bootswatch.com/4/litera/bootstrap.min.css" rel="stylesheet">
		<link
		href="https://getbootstrap.com/docs/5.0/components/accordion/" rel="styleshee">

		{# Run `composer require symfony/webpack-encore-bundle`
																           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{ path('login') }}">YOS Etude</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor03">
				<ul class="navbar-nav mr-auto" style="
												    width: 100%;
												    justify-content: space-between;">
					<div style=" display: flex;  align-items: center;">
						<li class="nav-item ">
							<a class="nav-link" href="{{ path('user') }}">Gerer profile
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('c_v') }}">Specification CV</a>
						</li>
					</div>
					<div>
						{% if app.user %}
							<li class="nav-item mx-0 mx-lg-1">
								<a class="btn " style="background-color:#30f7bb;" href="{{ path('Deconnexion')}}">se deconnecter</a>
							</li>
						{% endif %}

					</div>

				</ul>
			</div>
		</nav>
	</head>
	<body>

		{% block body %}{% endblock %}
	</body>
</html>
