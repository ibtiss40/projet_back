		<link href="frontend/usertemplate/assets/demo/demo.css" rel="stylesheet"/>
	</head>

	<body>
		<style>
			.test {
				margin: 5%;
			}
			.tt {
				margin-top: 50px;
			}
			.ti {
				margin-top: 15px;
			}
		</style>
		<div class="test">
			<div class="content">
				<div class="row">
					<div class="col-md-2"></div>
					<div class="col-md-8">
						<div class="card card-user">
							<div class="card-header">
								<h5 class="card-title">
									<center>
										<b>
											<u>
												<i>Formulaire CV</i>
											</u>
										</b>
									</center>
								</h5>
							</div>
							<div class="card-body">
								<form method="Post" action="{{path('AddExperience') }}"> 

									<h5 class=" mb-2">
										<font color="#10B084">Experiences professionnelles :</font>
									</h5>
									<div class="row">

										<div class="col-md-4 pr-1">

											<div class="form-group">
												<label>Societe</label>
												<input type="text" name="societe" class="form-control" placeholder="societe">
											</div>
										</div>
										<div class="col-md-4 pl-1">
											<div class="form-group">
												<label>Date Debut</label>
												<input type="date" class="form-control" name="db" placeholder="Date Debut " >
											</div>
										</div>
										<div class="col-md-4 pl-1">
											<div class="form-group">
												<label>Date Fin</label>
												<input type="date" class="form-control" name="df" placeholder="Date Fin " >
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-10 mx-sm-3  pl-1">
											<div class="form-group">
												<label>Description</label>
												<input type="text" class="form-control textarea" name="desc" placeholder="Description de votre experience">

											</div>
										</div>
										<div class="tt">
											<div class="col-md-1 pl-1 ">
												<div class="form-group">
													<input type="hidden" id="ex" name="experiance[]">
													<input id="btnex" type="button" class="btn btn-outline-primary">+</input>

												</div>
											</div>
										</div>
									<div class="card border-secondary mb-3" style="max-width: 60rem;">
										<div class="card-body">
											<div class="col-md-12">

												<div class="form-group">
													<pre id="listeEX" ></pre>
												</div>
											</div>
										</div>

									</div>

									
									<div class="row">
									<h5 class=" mb-4">
										<font color="#10B084">Formation :</font>
									</h5>
										<div class="col-md-4 pr-1">

											<div class="form-group">
												<label>Formation</label>
												<input type="text" name="formation" class="form-control" placeholder="Formation">
											</div>
										</div>
										<div class="col-md-4 pl-1">
											<div class="form-group">
												<label>Date Debut</label>
												<input type="text" class="form-control" name="datedeb" placeholder="Date Debut " onfocus="(this.type = 'date')">
											</div>
										</div>
										<div class="col-md-4 pl-1">
											<div class="form-group">
												<label>Date Fin</label>
												<input type="text" class="form-control" name="datefi" placeholder="Date Fin " onfocus="(this.type = 'date')">
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-10 mx-sm-3  pl-1">
											<div class="form-group">
												<label>Description</label>
												<textarea class="form-control textarea" name="descr" placeholder="Description de votre experience"></textarea>

											</div>
										</div>
										<div class="tt">
											<div class="col-md-1 pl-1 ">
												<div class="form-group">

													<button class="btn btn-outline-primary">+</button>

												</div>
											</div>
										</div>
									</div>
									<div class="card border-secondary mb-3" style="max-width: 60rem;">
										<div class="card-body">
											<div class="col-md-12">

												<div class="form-group">
													<h4 class="card-title">
														Liste des formations</h4>
												</div>
											</div>
										</div>

									</div>


									<h5 class=" mb-4">
										<font color="#10B084">Competences :</font>
									</h5>
									<div class="row">
										<div class="col-md-7 pr-1">
											<div class="form-group">
												<label>Competences</label>
												<input type="text" name="competences" class="form-control" placeholder="Competences">
											</div>
										</div>
										<div class="ti">
											<div class="col-md-1 pl-1 ">
												<div class="form-group">
													<button type="button" class="btn btn-outline-primary">+</button>

												</div>
											</div>
										</div>
									</div>
									<div class="card border-secondary mb-3" style="max-width: 60rem;">
										<div class="card-body">
											<div class="col-md-12 pr-1">

												<div class="form-group">
													<h4 class="card-title">
														Liste des competences</h4>
												</div>
											</div>
										</div>
									</div>


									<h5 class=" mb-4">
										<font color="#10B084">Langues :</font>
									</h5>
									<div class="row">
										<div class="col-md-7 pr-1">
											<div class="form-group">
												<label>Langues</label>
												<input type="text" name="langues" class="form-control" placeholder="Langues">
											</div>
										</div>
										<div class="ti">
											<div class="col-md-1 pl-1 ">
												<div class="form-group">

													<button type="button" class="btn btn-outline-primary">+</button>

												</div>
											</div>
										</div>
									</div>
									<div class="card border-secondary mb-3" style="max-width: 60rem;">
										<div class="card-body">
											<div class="col-md-12 pr-1">

												<div class="form-group">
													<h4 class="card-title">
														Liste des langues</h4>
												</div>
											</div>
										</div>
									</div>


									<h5 class=" mb-4">
										<font color="#10B084">Loisirs :</font>
									</h5>
									<div class="row">
										<div class="col-md-7 pr-1">
											<div class="form-group">
												<label>Loisirs</label>
												<input type="text" name="loisirs" class="form-control" placeholder="Loisirs">
											</div>
										</div>
										<div class="ti">
											<div class="col-md-1 pl-1 ">
												<div class="form-group">

													<button type="button" class="btn btn-outline-primary">+</button>

												</div>
											</div>
										</div>
									</div>
									<div class="card border-secondary mb-3" style="max-width: 60rem;">
										<div class="card-body">
											<div class="col-md-12 pr-1">

												<div class="form-group">
													<h4 class="card-title">
														Liste des loisirs</h4>
												</div>
											</div>
										</div>
									</div>


									<div class="row">
										<div class="update ml-auto mr-auto">
											<button type="submit" class="btn btn-primary btn-round">Enregistrer</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
					<div class="col-md-2"></div>
				</div>
			</div>
		</div>
		
  {% block javascripts %}

		<!--   Core JS Files   -->
		<script src="frontend/usertemplate/assets/js/core/jquery.min.js"></script>
		<script src="frontend/usertemplate/assets/js/core/popper.min.js"></script>
		<script src="frontend/usertemplate/assets/js/core/bootstrap.min.js"></script>
		<script src="frontend/usertemplate/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
		<!--  Google Maps Plugin    -->
		<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
		<!-- Chart JS -->
		<script src="frontend/usertemplate/assets/js/plugins/chartjs.min.js"></script>
		<!--  Notifications Plugin    -->
		<script src="frontend/usertemplate/assets/js/plugins/bootstrap-notify.js"></script>
		<!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
		<script src="frontend/usertemplate/assets/js/paper-dashboard.min.js?v=2.0.1" type="text/javascript"></script>
		<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
		<script src="frontend/usertemplate/assets/demo/demo.js"></script>
		<script>

			var listeExperiance = [];
		$( "#btnex" ).click(function() {
			
			var sayings = "DebutEx"+$("input[name=societe]").val()+" - "+ $("input[name=df]").val()+" - "+ $("input[name=db]").val()+" - "+ $("input[name=desc]").val();
		
			listeExperiance.push(sayings);
			$('input[name="experiance[]"]').val(listeExperiance);
			$('#listeEX').text($('#listeEX').text()+"\n"+$("input[name=societe]").val()+" - "+ $("input[name=df]").val()+" - "+ $("input[name=db]").val()+" - "+ $("input[name=desc]").val());
		});

		</script>

  {% endblock %}
