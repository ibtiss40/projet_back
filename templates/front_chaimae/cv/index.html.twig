<script>

  var listeExperiance = [];
  var listeFormation = [];
  var listeCompetence = [];
  var listeLangue = [];
  var listeLoisir = [];

  $("#btnex").click(function () {

    var sayings = "DebutEx" + $("input[name=societe]").val() + " - " + $("input[name=df]").val() + " - " + $("input[name=db]").val() + " - " + $("input[name=desc]").val();

    listeExperiance.push(sayings);
    $('input[name="experiance[]"]').val(listeExperiance);
    $('#listeEX').text($('#listeEX').text() + "\n" + $("input[name=societe]").val() + " - " + $("input[name=df]").val() + " - " + $("input[name=db]").val() + " - " + $("input[name=desc]").val());
  });



  $("#btnfr").click(function () {

    var sayings = "DebutFr" + $("input[name=formation]").val() + " - " + $("input[name=datefi]").val() + " - " + $("input[name=datedeb]").val() + " - " + $("input[name=descr]").val();

    listeFormation.push(sayings);
    $('input[name="formation[]"]').val(listeFormation);
    $('#listeFR').text($('#listeFR').text() + "\n" + $("input[name=formation]").val() + " - " + $("input[name=datefi]").val() + " - " + $("input[name=datedeb]").val() + " - " + $("input[name=descr]").val());
  });


  $("#btncom").click(function () {

    var sayings = "DebutCom" + " - " + $("input[name=competences]").val();

    listeCompetence.push(sayings);
    $('input[name="competence[]"]').val(listeCompetence);
    $('#listeCOM').text($('#listeCOM').text() + "\n" + $("input[name=competences]").val());
  });

  $("#btnlan").click(function () {

    var sayings = "DebutLan" + " - " + $("input[name=langues]").val();

    listeLangue.push(sayings);
    $('input[name="langue[]"]').val(listeLangue);
    $('#listeLAN').text($('#listeLAN').text() + "\n" + $("input[name=langues]").val());
  });


  $("#btnloi").click(function () {

    var sayings = "DebutLoi" + " - " + $("input[name=loisirs]").val();

    listeLoisir.push(sayings);
    $('input[name="loisir[]"]').val(listeLoisir);
    $('#listeLOI').text($('#listeLOI').text() + "\n" + $("input[name=loisirs]").val());
  });

</script>

